{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "declarationMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noEmit": false,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
